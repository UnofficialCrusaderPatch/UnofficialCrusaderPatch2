<Window x:Class="UCP.Views.LanguageSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCP.Views"
        mc:Ignorable="d"
             Title="{DynamicResource ui_chooseLangTitle}" Height="184.718" Width="216.153" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="textBlock" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Left" Height="61" Margin="10,10,0,0" VerticalAlignment="Top" Width="179" Text="{DynamicResource ui_chooseLang}"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="25,71,0,0" VerticalAlignment="Top" Width="152" ItemsSource="{Binding LanguagesComboBox}" Text="{Binding ActualLanguage}" />
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Height="32" Margin="10,103,0,0" VerticalAlignment="Top" Width="86" Click="Accept_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Height="32" Margin="103,103,0,0" VerticalAlignment="Top" Width="86" Click="Cancel_Click"/>
    </Grid>
</Window>
