<UserControl x:Class="UCP.Views.Controls.Other.Control_o_override_identity_menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UCP.Views.Controls.Other"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander x:Name="expander" IsExpanded="false">
        <Expander.Header>
            <CheckBox Content="{DynamicResource o_override_identity_menu}" x:Name="o_override_identity_menu"/>
        </Expander.Header>
        <TextBlock Text="{DynamicResource o_override_identity_menu_descr}" TextWrapping="WrapWithOverflow" />
    </Expander>
</UserControl>
