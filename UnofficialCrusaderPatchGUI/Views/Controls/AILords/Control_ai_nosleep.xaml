<UserControl x:Class="UCP.Views.Controls.AILords.Control_ai_nosleep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UCP.Views.Controls.AILords"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Expander x:Name="expander" IsExpanded="false">
        <Expander.Header>
            <CheckBox Content="{DynamicResource ai_nosleep}" x:Name="ai_nosleep"/>
        </Expander.Header>
        <TextBlock Text="{DynamicResource ai_nosleep_descr}" TextWrapping="WrapWithOverflow" />
    </Expander>
</UserControl>
